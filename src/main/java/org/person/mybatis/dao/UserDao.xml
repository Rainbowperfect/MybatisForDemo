<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.person.mybatis.dao.UserDao">

    <insert id="addUser" parameterType="org.person.mybatis.model.User">
        <selectKey keyColumn="userid" keyProperty="userid" order="BEFORE" resultType="string">
            SELECT uuid();
        </selectKey>
        INSERT INTO user (userid,username,userage) VALUES (#{userid},#{username},#{userage});
    </insert>


    <update id="modify" parameterType="org.person.mybatis.model.User">
        UPDATE user SET username=#{username},userage=#{userage} WHERE userid=#{userid}
    </update>

    <select id="getUserByUserCarId" parameterType="IdCard" resultType="User">
        SELECT * FROM user u  RIGHT JOIN idcard ic ON ic.userid=u.userid WHERE ic.cartId=#{cartId}
    </select>
  <!--
    <select id="getUserMap" parameterType="map" resultType="User">
        SELECT * FROM user WHERE userid=#{uid}
    </select>-->

    <select id="getUserCount" parameterType="map" resultType="int">
        SELECT count(1) FROM  user
    </select>
    
    <resultMap id="UerResultMap" type="User">
        <id column="userid" property="userid"></id>
        <result column="username"  property="username"/>
        <result column="userage"  property="userage"/>
    </resultMap>
    <select id="getUserMap" parameterType="map" resultMap="UerResultMap">
        SELECT * FROM user WHERE userid=#{uid}
    </select>

    <!--<select id="getUserByMap" resultMap="UerResultMap" parameterType="map">
        SELECT * FROM  user
        <where>
            <if test="uid!=null">
                AND userid=#{uid}
            </if>
        </where>
    </select>-->



    <select id="getUserByMap" resultMap="UerResultMap" parameterType="map">
        SELECT * FROM  user
        <where>
            <choose>
                <when test="uid!=null">
                    AND userid=#{uid}
                </when>
                <when test="start!=null and end!=null">
                    AND userage BETWEEN #{start} AND #{end}
                </when>
                <when test="start!=null" >
                    <![CDATA[
                  AND usrage>#{start]
                ]]>
                </when>
            <when test="end!=null">
                <![CDATA[
            AND userage <#{start}
            ]]>
            </when>
            </choose>
        </where>

    </select>
</mapper>